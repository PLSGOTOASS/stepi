FROM node:14

# Установите рабочую директорию
WORKDIR /app

# Копируйте package.json и package-lock.json (если он есть)
COPY package*.json ./

# Установите зависимости
RUN npm install

# Копируйте все файлы приложения
COPY . .

# Откройте порт, который использует ваш сервер разработки (например, 3000)
EXPOSE 3000

# Запустите сервер разработки
CMD ["npm", "start"]
